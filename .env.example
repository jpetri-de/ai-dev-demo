# TodoMVC Environment Configuration
# Copy this file to .env and customize for your environment

# ===================================
# Application Configuration
# ===================================
APP_PORT=8080
DOMAIN=localhost

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:8080,https://yourdomain.com

# ===================================
# JVM Configuration
# ===================================
MAX_HEAP=1g
MIN_HEAP=512m

# ===================================
# Proxy Configuration
# ===================================
HTTP_PORT=80
HTTPS_PORT=443

# ===================================
# Monitoring Configuration
# ===================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123

# ===================================
# Logging Configuration
# ===================================
STRUCTURED_LOGGING=false
FLUENTD_PORT=24224

# ===================================
# Database Configuration (Future)
# ===================================
POSTGRES_PORT=5432
POSTGRES_DB=todoapp
POSTGRES_USER=todoapp
POSTGRES_PASSWORD=todoapp123

# ===================================
# Cache Configuration (Future)
# ===================================
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ===================================
# Load Balancer Configuration
# ===================================
HAPROXY_HTTP_PORT=8000
HAPROXY_HTTPS_PORT=8443
HAPROXY_STATS_PORT=8404

# ===================================
# Security Configuration
# ===================================
# Generate secure passwords for production
# Use tools like: openssl rand -base64 32

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ===================================
# Feature Flags
# ===================================
FEATURE_TOGGLE_ALL=true
FEATURE_CLEAR_COMPLETED=true
FEATURE_COUNTER=true
FEATURE_FILTERS=true

# ===================================
# Performance Configuration
# ===================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ===================================
# Development Configuration
# ===================================
# Uncomment for development
# SPRING_PROFILES_ACTIVE=dev
# DEBUG_MODE=true